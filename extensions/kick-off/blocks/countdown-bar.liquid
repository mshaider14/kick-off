<div id="countdown-cta-bar" 
     class="countdown-bar"
     data-shop="{{ shop.permanent_domain }}"
     style="display: none;">

  <div class="countdown-bar__container">
    <div class="countdown-bar__content">
      <span class="countdown-bar__message"></span>

      <div class="countdown-bar__timer" id="countdown-timer">
        <span class="countdown-bar__time-unit" id="days-container">
          <span class="countdown-bar__time-value" id="days">00</span>
          <span class="countdown-bar__time-label">Days</span>
        </span>
        <span class="countdown-bar__separator">:</span>
        <span class="countdown-bar__time-unit" id="hours-container">
          <span class="countdown-bar__time-value" id="hours">00</span>
          <span class="countdown-bar__time-label">Hours</span>
        </span>
        <span class="countdown-bar__separator">:</span>
        <span class="countdown-bar__time-unit" id="mins-container">
          <span class="countdown-bar__time-value" id="minutes">00</span>
          <span class="countdown-bar__time-label">Mins</span>
        </span>
        <span class="countdown-bar__separator">:</span>
        <span class="countdown-bar__time-unit" id="secs-container">
          <span class="countdown-bar__time-value" id="seconds">00</span>
          <span class="countdown-bar__time-label">Secs</span>
        </span>
      </div>

      <a href="#" class="countdown-bar__button" id="cta-button" style="display: none;"></a>
    </div>

    <button class="countdown-bar__close" id="close-bar" aria-label="Close">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
 
   </button>
  </div>
</div>

<div id="free-shipping-bar" 
     class="free-shipping-bar"
     data-shop="{{ shop.permanent_domain }}"
     style="display: none;">

  <div class="free-shipping-bar__container">
    <div class="free-shipping-bar__content">
      <div class="free-shipping-bar__wrapper">
        <div class="free-shipping-bar__header">
          <span class="free-shipping-bar__icon" id="shipping-icon">ðŸšš</span>
          <span class="free-shipping-bar__message" id="shipping-message"></span>
        </div>
        
        <div class="free-shipping-bar__progress-container">
          <div class="free-shipping-bar__progress-track">
            <div class="free-shipping-bar__progress-fill" id="progress-fill"></div>
          </div>
          <div class="free-shipping-bar__progress-text" id="progress-text"></div>
        </div>
      </div>
    </div>

    <button class="free-shipping-bar__close" id="close-shipping-bar" aria-label="Close">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>

<div id="email-capture-bar" 
     class="email-capture-bar"
     data-shop="{{ shop.permanent_domain }}"
     style="display: none;">

  <div class="email-capture-bar__container">
    <div class="email-capture-bar__content">
      <div class="email-capture-bar__form-wrapper">
        <div class="email-capture-bar__message-container">
          <span class="email-capture-bar__message" id="email-message"></span>
        </div>

        <form class="email-capture-bar__form" id="email-form">
          <div class="email-capture-bar__form-fields">
            <input 
              type="email" 
              class="email-capture-bar__input" 
              id="email-input" 
              name="email"
              placeholder="Enter your email"
              required
              aria-label="Email address"
            />
            <input 
              type="text" 
              class="email-capture-bar__input email-capture-bar__input--name" 
              id="name-input" 
              name="name"
              placeholder="Your name (optional)"
              style="display: none;"
              aria-label="Name"
            />
          </div>

          <div class="email-capture-bar__privacy" id="privacy-checkbox-container" style="display: none;">
            <label class="email-capture-bar__privacy-label">
              <input 
                type="checkbox" 
                class="email-capture-bar__checkbox" 
                id="privacy-checkbox"
                required
              />
              <span class="email-capture-bar__privacy-text" id="privacy-text"></span>
            </label>
          </div>

          <div class="email-capture-bar__error" id="email-error" style="display: none;"></div>

          <button 
            type="submit" 
            class="email-capture-bar__submit" 
            id="email-submit"
          >
            Get My Discount
          </button>
        </form>

        <div class="email-capture-bar__success" id="email-success" style="display: none;">
          <div class="email-capture-bar__success-icon">âœ“</div>
          <div class="email-capture-bar__success-message" id="success-message"></div>
          <div class="email-capture-bar__discount-code" id="discount-code-container" style="display: none;">
            <span class="email-capture-bar__discount-label">Your Code:</span>
            <span class="email-capture-bar__discount-value" id="discount-code"></span>
          </div>
        </div>
      </div>
    </div>

    <button class="email-capture-bar__close" id="close-email-bar" aria-label="Close">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>
{% schema %}
{
  "name": "Countdown & CTA Bar",
  "target": "body",
  "stylesheet": "countdown-bar.css",
  "javascript": "countdown-bar.js"
}
{% endschema %}