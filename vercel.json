{
  "version": 2,
  "buildCommand": "npx prisma generate && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "build/client",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/schedule/check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/reset-views",
      "schedule": "0 0 1 * *"
    }
  ]
}